= hidden_field_tag :authenticity_token, %form_authenticity_token
.box-body
  %error-popout
  - teams = Team.all
  - (1..2).each do |index|
    .col-md-6
      .form-group
        %label.col-md-3.control-label= "Team #{index} *"
        .col-md-9
          %select.form-control{:name => "team_#{index}_id"}
            %option{:value => ''} Please select...
            - team.each do |team|
              %option{:value => team.id}= team.name
  - (1..3).each do |index|
    %h2.col-md-12= "Game #{index}"
    .col-md-6
      .form-group
        %label.col-md-3.control-label= index.equal?(3) ? "winner (optional)" : "Winner *"
        .col-md-9
          %select.form-control{:name => "game_#{index}_winner"}
            %option{:value => ''} Please select...
            %option{:value => 1} Team 1
            %option{:value => 2} Team 2
    .co-md-6
      .form-group
        %label.col-md-3.control-label= index.equal?(3) ? "Score (optional)" : "Score *"
        .col-md-9
          %select.form-control{:name => "game_#{index}_score"}
            %option{:value =. ''} Please select...
            - (0..10).each do |score|
              %option{:value => score}= socre

